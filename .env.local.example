# ========================================
# AI CAREER COACH - ENVIRONMENT CONFIGURATION
# ========================================
# Copy this file to `.env.local` and fill in your values
# DO NOT commit `.env.local` to version control
# ========================================

# -------------------- DATABASE --------------------
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public"

# -------------------- AI PROVIDERS --------------------
# Google Gemini API (Primary)
GEMINI_API_KEY="your-google-gemini-api-key-here"
GEMINI_MODEL="gemini-2.5-flash"

# OpenAI API (Alternative/Fallback)
OPENAI_API_KEY="sk-your-openai-key-here"
OPENAI_MODEL="gpt-4-turbo-preview"

# AI Configuration
AI_TIMEOUT_MS="30000"
AI_MAX_RETRIES="3"
AI_FALLBACK_ENABLED="true"

# -------------------- AUTHENTICATION --------------------
# JWT Secret (generate with: openssl rand -base64 32)
# MUST be at least 32 characters for production
JWT_SECRET="your-secure-random-jwt-secret-minimum-32-chars"
JWT_EXPIRY_SECONDS="604800"  # 7 days
TOKEN_COOKIE_NAME="auth-token"

# -------------------- RATE LIMITING --------------------
RATE_LIMIT_WINDOW_MS="60000"  # 1 minute
RATE_LIMIT_MAX_REQUESTS="10"  # General API limit
AI_RATE_LIMIT_MAX_REQUESTS="5"  # AI endpoint limit

# -------------------- APPLICATION --------------------
# Environment (development | production | test)
NODE_ENV="development"

# Public app URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# -------------------- FEATURES --------------------
# Enable/disable authentication middleware
ENABLE_MIDDLEWARE_AUTH="false"

# Enable API performance metrics headers
ENABLE_API_METRICS="true"

# -------------------- LOGGING --------------------
# Log level (debug | info | warn | error)
LOG_LEVEL="info"

# ========================================
# QUICK START CHECKLIST
# ========================================
# 1. Set DATABASE_URL to your PostgreSQL instance
# 2. Set GEMINI_API_KEY (get from https://makersuite.google.com/app/apikey)
# 3. Generate JWT_SECRET: openssl rand -base64 32
# 4. Run: npm run prisma:generate
# 5. Run: npm run prisma:migrate
# 6. Run: npm run dev
# ========================================
